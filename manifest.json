{
  "manifest_version": 3,
  "name": "Milo Mate",
  "version": "0.1.0",
  
  "description": "Customer AI assistant: STT, translation, sentiment-aware replies and summarization",
  "permissions": ["storage","activeTab","scripting","tabs","contentSettings"],
  "host_permissions": ["<all_urls>"],
  "action":{"default_popup":"popup.html"},
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches":["<all_urls>"], 
      "js": ["content.js"] 
    }
  ],
  "icons": { "128": "icons/icon128.png" }
}