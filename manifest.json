{
  "manifest_version": 3,
  "name": "Milo Mate",
  "version": "0.1.0",
  "description": "AI assistant: STT, translation, sentiment-aware replies and summarization",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contentSettings"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "optional_permissions": [
    "audioCapture"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "libs/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}